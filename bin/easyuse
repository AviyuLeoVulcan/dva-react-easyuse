#!/usr/bin/env node 

var program = require('commander');
var chalk = require('chalk').default;
var lib = require("../lib") 

program
.version('0.0.1', '-v, --version')

program.command('route <filename>')
.option("-m, --models [models]","要注册的模块")
.description('添加一个路由')
.action(lib.route);

program.command('component <filename>')
.description('添加一个组件')
.action(lib.component); 

program.command('model <filename>')
.description('添加一个dva的model')
.action(lib.model);

program.parse(process.argv);