#!/usr/bin/env node 

var program = require('commander');
var chalk = require('chalk').default;
var lib = require("../lib") 

program
.version('0.0.1', '-v, --version')

program.command('route <route-name>')
.option("-m, --models [models]","the models that the route will be usedï¼Œexample: easyuse route -m app,login myRoute")
.description('create new route')
.action(lib.route);

program.command('component <component-name>')
.description('create new component')
.action(lib.component); 

program.command('model <model-name>')
.description('create new model')
.action(lib.model);

program.parse(process.argv);